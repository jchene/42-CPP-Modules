#	_|  _____| _|  _| \__,_| _|\_\ \___|
#							  by jcluzet
################################################################################
#									 CONFIG								   #
################################################################################

NAME		:= ScavTrap
CC			:= c++
FLAGS		:= -Wall -Wextra -Werror -std=c++98 -D MSGS=0
 
################################################################################
#								 PROGRAM'S SRCS							   #
################################################################################

SRCS		:=  main.cpp \
				ClapTrap.cpp \
				ScavTrap.cpp \

OBJS		:=  ${SRCS:.cpp=.o}

HEADERS 	:=  ClapTrap.hpp \
				ScavTrap.hpp \

.cpp.o:
			${CC} ${FLAGS} -c $< -o ${<:.cpp=.o}

################################################################################
#								  Makefile  objs							  #
################################################################################

CLR_RMV		:= \033[0m
RED			:= \033[1;31m
GREEN		:= \033[1;32m
YELLOW		:= \033[1;33m
BLUE		:= \033[1;34m
CYAN		:= \033[1;36m
RM			:= rm -f

${NAME}:	${OBJS} ${HEADERS} Makefile
			@echo "$(GREEN)Compilation ${CLR_RMV}of ${YELLOW}$(NAME) ${CLR_RMV}..."
			${CC} ${FLAGS} -o ${NAME} ${OBJS}
			@echo "$(GREEN)$(NAME) created ✔️${CLR_RMV}"

all:		${NAME}

bonus:	all

clean:
			@ ${RM} *.o */*.o */*/*.o
			@ echo "$(RED)Deleting $(CYAN)$(NAME) $(CLR_RMV)objs ✔️"

fclean:	clean
			@ ${RM} ${NAME}
			@ echo "$(RED)Deleting $(CYAN)$(NAME) $(CLR_RMV)binary ✔️"

re:		fclean all

.PHONY:	all clean fclean re